<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ScheduleFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_sched_frag"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lbl_nosched"
        android:layout_width="131dp"
        android:layout_height="42dp"
        android:text="@string/noSched"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/rv_sched_frag"
        app:layout_constraintStart_toStartOf="@+id/rv_sched_frag"
        app:layout_constraintTop_toTopOf="@+id/rv_sched_frag" />
</androidx.constraintlayout.widget.ConstraintLayout>